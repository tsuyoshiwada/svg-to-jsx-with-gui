    "lint:css": "cross-env NODE_ENV=csslint stylelint \"src/**/*.js\"",
    "typecheck": "flow",
    "deploy": "gh-pages -d dist",
    "predev": "npm run clean",
    "preprod": "npm run clean",
    "predeploy": "npm run prod"
  },
